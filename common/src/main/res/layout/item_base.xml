<?xml version="1.0" encoding="utf-8"?>
<!--借用变量名为通用RecyclerView.ViewHolder提供点击事件;使用时item_***.xml中必须使用此变量名-->
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable name="onClickListener" type="android.view.View.OnClickListener"></variable>
        <variable name="viewHolder" type="android.view.View.OnClickListener"></variable>
        <variable name="viewHolder2" type="android.view.View.OnLongClickListener"></variable>
    </data>
    <View
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </View>

</layout>